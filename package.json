{
  "name": "ModuServer",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": "8.*"
  },
  "scripts": {
    "lint": "eslint .",
    "prestart": "yarn build-css",
    "start": "node .",
    "posttest": "npm run lint && nsp check",
    "migrate": "node scripts/run-migrations.js",
    "dev": "./node_modules/.bin/nodemon ./server.js & yarn watch-sass",
    "pretest": "NODE_ENV=test npm run migrate",
    "test": "NODE_ENV=test mocha",
    "build-css": "node-sass --include-path scss client/scss/main.scss client/styles/main.css",
    "watch-sass": "node-sass --include-path scss -w client/scss/main.scss client/styles/main.css"
  },
  "dependencies": {
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "helmet": "^1.3.0",
    "loopback": "^3.0.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^4.0.0",
    "loopback-connector-postgresql": "^2.9.0",
    "loopback-setup-remote-methods-mixin": "^1.0.4",
    "node-sass": "^4.9.2",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "dotenv": "^5.0.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-loopback": "^8.0.0",
    "eslint-plugin-import": "^2.9.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.1",
    "nsp": "^2.1.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "ModuServer"
}
